<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />

            <Button
                android:id="@+id/prase_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prase" />

            <Button
                android:id="@+id/suggest_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Show Suggest" />
            <Button
                android:id="@+id/weather_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Show Weather" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province" />

            <Spinner
                android:id="@+id/province_sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#0093dd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City" />

            <Spinner
                android:id="@+id/city_sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#0093dd" />

            <TextView
                android:id="@+id/weather_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>